<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingHorizontal="@dimen/activity_main_content_horizontal_padding"
    android:paddingVertical="@dimen/activity_main_content_vertical_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/item_space_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="EMAIL:"
            android:textColor="@color/green_2"
            android:textColorHint="@color/button_hint_text_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_edittext"
            android:gravity="start|top"
            android:inputType="text"
            android:text="gdscdogus@gmail.com"
            android:textColorHint="@color/button_hint_text_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/item_space_size"
            android:text="NAME SURNAME:"
            android:textColor="@color/green_2"
            android:textColorHint="@color/button_hint_text_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_name_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_edittext"
            android:gravity="start|top"
            android:inputType="text"
            android:text="DOGUS UNIVERSITY"
            android:textColorHint="@color/button_hint_text_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/item_space_size"
            android:text="COUNTRY:"
            android:textColor="@color/green_2"
            android:textColorHint="@color/button_hint_text_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_edittext"
            android:gravity="start|top"
            android:inputType="text"
            android:text="TURKEY"
            android:textColorHint="@color/button_hint_text_color" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_space_size"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>
</ScrollView>